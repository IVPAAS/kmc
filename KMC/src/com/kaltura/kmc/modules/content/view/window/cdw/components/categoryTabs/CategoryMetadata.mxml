<?xml version="1.0" encoding="utf-8"?>
<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml" xmlns:components="com.hillelcoren.components.*" creationComplete="vbox1_creationCompleteHandler(event)">
	<mx:Script>
		<![CDATA[
			import com.kaltura.edw.model.FilterModel;
			import com.kaltura.vo.KalturaCategory;
			
			import mx.events.FlexEvent;
			
			private const TEXT_WIDTH:Number = 264;
			private const LABEL_WIDTH:Number = 90;
			
			public var category:KalturaCategory;
			public var filterModel:FilterModel;
			
			
			private function vbox1_creationCompleteHandler(event:FlexEvent):void
			{
				
				
			}
			
		]]>
	</mx:Script>
	<mx:HBox width="100%">
		<mx:Label text="Name:" width="{LABEL_WIDTH}" styleName="drillDownLabel" />
		<mx:TextInput id="nameInput" width="{TEXT_WIDTH}" styleName="drillDownSubLabel"/>
	</mx:HBox>
	<mx:HBox width="100%">
		<mx:Label text="Description:" width="{LABEL_WIDTH}" styleName="drillDownLabel" />
		<mx:TextArea id="decriptionInput" width="{TEXT_WIDTH}" styleName="drillDownSubLabel"/>
	</mx:HBox>
	<mx:HBox width="100%">
		<mx:Label text="Tags:" width="{LABEL_WIDTH}" styleName="drillDownLabel" />
		<components:AutoComplete id="tagsInput" width="{TEXT_WIDTH}" selectedItemStyleName="facebook"
								 showRemoveIcon="true" allowMultipleSelection="true" allowNewValues="true" 
								 labelField="tag" />
	</mx:HBox>
	<mx:HBox width="100%">
		<mx:Label text="Reference ID:" width="{LABEL_WIDTH}" styleName="drillDownLabel" />
		<mx:TextArea id="referenceIdInput" styleName="drillDownLabel" width="{TEXT_WIDTH}" />
	</mx:HBox>
	
	<!-- custom data goes here -->
	
</mx:VBox>
