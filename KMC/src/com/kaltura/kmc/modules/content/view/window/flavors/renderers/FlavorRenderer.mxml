<?xml version="1.0" encoding="utf-8"?>
<mx:HBox xmlns:mx="http://www.adobe.com/2006/mxml">
	<mx:Script>
		<![CDATA[
			import com.kaltura.kmc.modules.content.view.window.flavors.FilesTable;
			
			import mx.events.ListEvent;
			
			public function set data(value:Object):void {
				super.data = value;
				selectFlavor();
			}

			protected function selectFlavor():void {
				for (var o:Object in data.flavors) {
//					if (o.toString() == data.
				}
			}
			
			protected function combobox1_changeHandler(event:ListEvent):void
			{
				dispatchEvent(new Event(FilesTable.FLAVOR_SELECTED, true));
			}
			
			public function get selectedFlavor():Object {
				return cb.selectedItem;
			}
			
			public function set selectedFlavor(value:Object):void {
				cb.selectedItem = value;
			}

		]]>
	</mx:Script>
	<mx:ComboBox id="cb" dataProvider="{data.flavors}" change="combobox1_changeHandler(event)"
				 width="100%"/>
</mx:HBox>
