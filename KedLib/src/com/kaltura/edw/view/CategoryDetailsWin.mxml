<?xml version="1.0" encoding="utf-8"?>
<containers:HelpTitleWindow xmlns:mx="http://www.adobe.com/2006/mxml" height="595" width="930" showCloseButton="true" showHelpButton="false"
				close="onClose(event)" layout="horizontal" horizontalScrollPolicy="off" paddingTop="18" title="New Category" xmlns:containers="com.kaltura.containers.*" xmlns:cat="com.kaltura.edw.components.fltr.cat.*" xmlns:window="com.kaltura.edw.view.window.*">
	<mx:Script>
		<![CDATA[
			import com.kaltura.edw.events.KedDataEvent;
			import com.kaltura.edw.model.FilterModel;
			
			import mx.events.CloseEvent;
			
			[Bindable]
			private var _filterModel:FilterModel;
			
			public function get filterModel():FilterModel {
				return _filterModel;
			}
			
			public function set filterModel(value:FilterModel):void {
				_filterModel = value;
			}
			
			private function onClose(event:CloseEvent):void{
				dispatchEvent(new KedDataEvent(KedDataEvent.CLOSE_WINDOW));
			}
			
			override protected function createChildren():void{
				super.createChildren();
				parentSelect.addEventListener(Event.CHANGE, onParentSelected);
			}
			
			private function onParentSelected(event:Event):void
			{
				currentState = "tabs";
			}
			
		]]>
	</mx:Script>
	<containers:states>
		<mx:State name="tabs">
			<mx:RemoveChild target="{parentSelect}"/>
			<mx:AddChild>
				<window:CategoryDetailsTabs id="tabsNav" width="100%" height="100%" />
			</mx:AddChild>
		</mx:State>
	</containers:states>
	
	<window:ParentCategorySelection id="parentSelect" width="100%" height="100%" filterModel="{_filterModel}"/>
</containers:HelpTitleWindow>
